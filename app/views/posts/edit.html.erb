<div class="form-container">
  <h1 class="form-title">投稿を編集</h1>

  <%= form_with model: @post, local: true, class: "custom-form" do |f| %>

    <% if @post.image.attached? %>
      <div class="current-image-section">
        <p class="section-label">現在の画像</p>
        <%= image_tag @post.image, class: "preview-img" %>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :image, "画像を変更", class: "form-label" %>
      <%= f.file_field :image, class: "file-input" %>
    </div>

    <div class="form-group">
      <%= f.label :title, "タイトル", class: "form-label" %>
      <%= f.text_field :title, required: true, class: "text-input", placeholder: "タイトルを入力してください" %>
    </div>

    <div class="form-group">
      <%= f.label :body, "本文", class: "form-label" %>
      <%= f.text_area :body, class: "textarea-input", placeholder: "本文を入力してください" %>
    </div>

    <div class="form-actions">
      <%= f.submit "更新する", class: "submit-btn" %>
    </div>
  <% end %>

  <div class="back-link-wrapper">
    <%= link_to "← 詳細に戻る", @post, class: "back-link-post" %>
  </div>
</div>