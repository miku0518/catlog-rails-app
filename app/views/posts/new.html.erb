<h1>新規投稿</h1>

<%= form_with model: @post, local: true do |f| %>
  <div>
    <%= f.label :image, "画像" %><br>
    <%= f.file_field :image %>
  </div>

  <div>
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title, required: true %>
  </div>

  <div>
    <%= f.label :body, "本文" %><br>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.submit "投稿する" %>
  </div>
<% end %>

<%= link_to "← 一覧に戻る", posts_path %>
