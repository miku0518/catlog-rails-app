<h1>投稿一覧</h1>

<% @posts.each do |post| %>
  <div>
    <% if post.image.attached? %>
      <%= image_tag post.image, style: "width: 100px;" %>
    <% end %>

    <%= link_to post.title, post_path(post) %>
    <h3>コメント <%= post.comments.count %> </h3>
    <p><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></p>
  </div>
<% end %>

