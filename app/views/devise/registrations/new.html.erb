<div class="signup-container">
  <div class="signup-card">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :login_name, "ユーザ名" %><br />
        <%= f.text_field :login_name, autofocus: true, autocomplete: "username" %>
      </div>


      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード"%>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上入力してください)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "確認用パスワード" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "登録する",class: "signup-botan"  %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
