<div class="devise-container">
  <div class="devise-card">
    <div class="devise-header">
      <h2>アカウントの設定</h2>
      <%# ゲストへの案内メッセージを追加 %>
      <% if current_user.email == 'guest@example.com' %>
        <p class="guest-alert">
          ※ゲストユーザーは閲覧専用です。変更は反映されません。
        </p>
      <% end %>
    </div>

    <% is_guest = (current_user.email == 'guest@example.com') %>

    <div class="devise-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: !is_guest, autocomplete: "email", class: "form-input", readonly: is_guest %>
        </div>

        <div class="form-group">
          <%= f.label :password, "新しいパスワード" %>
          <span class="label-hint">(変更しない場合は空欄)</span>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-input", readonly: is_guest %>
          <% if @minimum_password_length %>
            <p class="help-text">※<%= @minimum_password_length %>文字以上</p>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "パスワード（確認用）" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input", readonly: is_guest %>
        </div>

        <div class="form-group highlight-box">
          <%= f.label :current_password, "現在のパスワード" %>
          <span class="label-hint">(更新には必須です)</span>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-input", readonly: is_guest %>
        </div>

        <div class="actions">
          <% if is_guest %>
            <%= f.submit "更新不可（ゲスト）", class: "btn-primary btn-disabled", disabled: true %>
          <% else %>
            <%= f.submit "アカウントを更新", class: "btn-primary" %>
          <% end %>
        </div>
      <% end %>

      <div class="devise-footer">
        <div class="delete-section">
          <p>アカウントを削除しますか？</p>
          <% if is_guest %>
            <button class="btn-delete btn-disabled" disabled>退会不可（ゲスト）</button>
          <% else %>
            <%= button_to "退会手続きはこちら", registration_path(resource_name), 
              data: { confirm: "本当に削除しますか？", turbo_confirm: "本当に削除しますか？" }, method: :delete, class: "btn-delete" %>
          <% end %>
        </div>
        
        <div class="account-back-link">
          <%= link_to "← 戻る", :back %>
        </div>
      </div>
    </div>
  </div>
</div>